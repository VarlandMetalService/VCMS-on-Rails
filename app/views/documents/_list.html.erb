<p><%= page_entries_info documents %></p>

<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="col-xs-8">Name</th>
        <th class="col-xs-2 text-center">Added By</th>
        <th class="col-xs-1 text-center">Updated</th>
        <% if access_level == 3 -%>
          <th class="col-xs-1 text-center hidden-print">Options</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% documents.each do |d| -%>
        <tr>
          <td>
            <%= content_type_icon d.content_type %> <%= link_to d.name, d, :target => '_blank' %>
            <small class="pull-right">
              <% d.categories.each do |c| -%>
                <span class="label label-info"><%= c.name %></span>
              <% end %>
            </small>
            <div class="clearfix"><!----></div>
          </td>
          <td class="text-center"><%= d.user.full_name %></td>
          <td class="text-center"><%= d.document_updated_at.strftime '%m/%d/%y' %></td>
          <% if access_level == 3 -%>
            <td class="text-center hidden-print">
                <%= link_to 'Delete', d, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this document?' }  %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="hidden-print">
  <%= will_paginate documents, renderer: BootstrapPagination::Rails %>
</div>