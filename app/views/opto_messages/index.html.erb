<% provide(:title, 'Opto Messages') %>
<div class="row">

  <div class="col-xs-12">

    <div class="well well-sm">
      <strong class="pull-left">Opto Messages</strong>
      <div class="clearfix"><!----></div>
    </div>

  </div>

  <div class="col-xs-12">

    <% if @opto_messages.size == 0 -%>

      <p class="text-muted">No Opto messages found.</p>

    <% else -%>

      <%= form_for_filterrific @filterrific, { html: { class: 'bg-warning filter_form hidden-print' } } do |f| %>

        <div class="row">

          <div class="col-xs-12 col-sm-12 col-md-6">
            <div class="form-group">
              <%= f.label :search_query, 'Search:' %>
              <%= f.text_field :search_query, class: 'form-control filterrific-periodically-observed' %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-4 col-md-2">
            <div class="form-group">
              <%= f.label :with_date_gte, 'Starting Date:' %>
              <%= f.datetime_local_field :with_date_gte, class: 'form-control'  %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-4 col-md-2">
            <div class="form-group">
              <%= f.label :with_date_lte, 'Ending Date:' %>
              <%= f.datetime_local_field :with_date_lte, class: 'form-control'  %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-4 col-md-2">
            <div class="form-group">
              <%= f.label :sorted_by, 'Sorted By:' %>
              <%= f.select :sorted_by, @filterrific.select_options[:sorted_by], { }, { class: 'form-control' } %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_department, 'Department:' %>
              <%= f.select :with_department, @filterrific.select_options[:with_department], { include_blank: true }, { class: 'form-control' } %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_lane, 'Lane:' %>
              <%= f.select :with_lane, @filterrific.select_options[:with_lane], { include_blank: true }, { class: 'form-control' } %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_station, 'Station:' %>
              <%= f.text_field :with_station, class: 'form-control filterrific-periodically-observed' %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_barrel, 'Barrel:' %>
              <%= f.select :with_barrel, @filterrific.select_options[:with_barrel], { include_blank: true }, { class: 'form-control' } %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_shop_order, 'Shop Order:' %>
              <%= f.text_field :with_shop_order, class: 'form-control filterrific-periodically-observed' %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_load, 'Load:' %>
              <%= f.text_field :with_load, class: 'form-control filterrific-periodically-observed' %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :with_type, 'Type:' %>
              <%= f.select :with_type, @filterrific.select_options[:with_type], { include_blank: false }, { class: 'form-control', multiple: 'multiple' } %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="form-group">
              <%= f.label :without_type, 'Exclude:' %>
              <%= f.select :without_type, @filterrific.select_options[:with_type], { include_blank: false }, { class: 'form-control', multiple: 'multiple' } %>
            </div>
          </div>

        </div>

        <div class="row">

          <div class="col-xs-12">

            <%= render_filterrific_spinner %>

            <%= link_to 'Reset Filters', reset_filterrific_url, class: 'btn btn-xs btn-warning pull-right' %>
            <div class="clearfix"><!----></div>

          </div>

        </div>

      <% end %>

      <div id="results"><%= render partial: 'opto_messages/list', locals: { opto_messages: @opto_messages, current_user: @current_user, access_level: @access_level.access_level } %></div>

    <% end %>

  </div>

</div>