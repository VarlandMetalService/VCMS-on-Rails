<!DOCTYPE html>
<html>
  
  <head>
    
    <title>VCMS</title>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    
  </head>
  
  <body class="login">
    
    <div class="container">
      
      <div class="row">
        
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 login-form-container">
    
          <%= form_for(:session, url: login_path) do |f| %>
    
            <%= render partial: 'shared/flash_messages', flash: flash %>
      
            <div class="form-group">
              <%= f.label :username, 'Username:' %>
              <%= f.text_field :username, class: 'form-control', required: 'required', autofocus: 'autofocus' %>
              <span class="help-block"><small><em>This is the same as your System i username.</em></small></span>
            </div>
      
            <div class="form-group">
              <%= f.label :password, 'Password:' %>
              <%= f.password_field :password, class: 'form-control', required: 'required' %>
              <span class="help-block"><small><em>This is the same as your System i password.</em></small></span>
            </div>
      
            <%= f.submit 'Log In', class: 'btn btn-primary btn-block' %>
            
          <% end %>
          
        </div>
        
      </div>
    
    </div>
  
  </body>

</html>